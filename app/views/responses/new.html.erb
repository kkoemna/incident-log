<%= render "shared/header" %>

<div class="container">
  <div class="row col-lg-5 mx-auto">
    <h2 class="mt-5 text-center form-title">Post a new response</h2>
    <%= form_with model: [@incident, @response], local: true do |f| %>

      <div class="my-3">
        <%= f.label :image %><br/>
        <%= f.file_field :image, class:"form-control mt-1" %>
      </div>

      <div class="my-3">
        <%= f.label :date %><span class="text-white bg-danger hissu">必須</span><br/>
        <%= f.text_field :date, autofocus: true, class:"form-control mt-1" %>
      </div>

      <div class="my-3">
        <%= f.label :cost %><br/>
        <%= f.text_field :cost, class:"form-control mt-1" %>
      </div>

      <div class="my-3">
        <%= f.label :title %><span class="text-white bg-danger hissu">必須</span><br/>
        <%= f.text_field :title, class:"form-control mt-1" %>
      </div>

      <div class="my-3">
        <%= f.label :content %><span class="text-white bg-danger hissu">必須</span><br/>
        <%= f.text_area :content, class:"form-control mt-1" %>
      </div>

      <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">投稿する</button>
    <% end %>
  </div>
</div>