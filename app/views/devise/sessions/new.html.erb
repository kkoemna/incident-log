<%# ヘッダーの呼び出し %>
<%= render "shared/header" %>
<%# /ヘッダーの呼び出し %>


<div class="container">
  <div class="row col-lg-6 mx-auto">
    <h1 class="mt-5 text-center form-title">ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="my-3">
        <%= f.label :名前 %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control mt-1" %>
      </div>

      <div class="my-3">
        <%= f.label :パスワード %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control mt-1" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="my-3">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン情報を保持する %>
        </div>
      <% end %>

      <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">ログインする</button>
    <% end %>

    <div class="row col-lg-6 mx-auto">
      <div class="card-body my-5">
        <div class="card-text d-grid gap-2 d-md-flex justify-content-md-center">
          <%= link_to '一覧画面に戻る', root_path, class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>